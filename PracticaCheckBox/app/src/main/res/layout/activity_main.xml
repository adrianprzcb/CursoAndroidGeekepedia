<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/numero2"
        android:layout_width="265dp"
        android:layout_height="47dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Dame el segundo valor"
        android:inputType="number"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numero1" />

    <EditText
        android:id="@+id/numero1"
        android:layout_width="265dp"
        android:layout_height="47dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="116dp"
        android:ems="10"
        android:hint="Dame el primer valor"
        android:inputType="number"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/boton"
        android:layout_width="127dp"
        android:layout_height="47dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="40dp"
        android:onClick="elegirTipo"
        android:text="Calcular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restar" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="206dp"
        android:layout_height="94dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="48dp"
        android:text="Resultado"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton" />

    <CheckBox
        android:id="@+id/sumar"
        android:layout_width="85dp"
        android:layout_height="46dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="16dp"
        android:text="Sumar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numero2" />

    <CheckBox
        android:id="@+id/restar"
        android:layout_width="87dp"
        android:layout_height="48dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="16dp"
        android:text="Restar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sumar" />


</androidx.constraintlayout.widget.ConstraintLayout>